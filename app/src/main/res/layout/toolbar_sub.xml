<?xml version="1.0" encoding="utf-8"?>
<!--다이어리에 필요한 툴바-->
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_design"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cloudColor"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:menu="@menu/toolbar_menu_sub">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--하트 아이콘-->
        <ImageView
            android:id="@+id/toolbarSub_icon"
            android:layout_width="39dp"
            android:layout_height="27dp"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/StringValue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_heart" />

        <!--앱 이름-->
        <ImageView
            android:id="@+id/toolbarSub_title"
            android:layout_width="108dp"
            android:layout_height="26dp"
            android:contentDescription="@string/StringValue"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/toolbarSub_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/title_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>