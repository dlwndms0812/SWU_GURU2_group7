<?xml version="1.0" encoding="utf-8"?>
<!--액션바 사용 X, 앱 이름 + 로고 변경, 스플래시 화면 사용-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.test">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_main"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_main"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity android:name=".media_hobby"/>
        <activity android:name=".Media_Movie" />
        <activity android:name=".Calendar" />
        <activity android:name=".Note_MainActivity" />
        <activity android:name=".AddNoteActivity" />
        <activity android:name=".Password_change" />
        <activity android:name=".Join_us" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Media_music" />
        <activity android:name=".Recommend_media" />
        <activity android:name=".Recommend_weather" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>